{
  "builders": [
    {
      "type": "docker",
      "image": "{{user `ecr_base_image` }}",
      "commit": true,
      "container_dir":"/containers",
      "changes": [
        "EXPOSE 5000 5001",
        "WORKDIR /app",
        "ENTRYPOINT [\"dotnet\", \"SpikeWeekAws.dll\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./SpikeWeekAws/bin/Release/netcoreapp2.1",
      "destination": "/app/"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `ecr_url` }}/spikeweekaws",
        "tag": "{{user `ecr_tag` }}"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "aws_profile": "{{user `aws_profile` }}",
        "login_server": "https://{{user `ecr_url` }}/"
      }
    ]
  ]
}
