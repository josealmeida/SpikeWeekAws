{
  "variables": {
    "ecr_base": "508281263350.dkr.ecr.eu-west-2.amazonaws.com",
    "aws_profile": "josealmeida.nice",
    "tag": "0.2"
  },
  "builders": [
    {
      "type": "docker",
      "image": "mcr.microsoft.com/dotnet/core/runtime:2.1",
      "commit": true,
      "container_dir":"/containers",
      "changes": [
        "EXPOSE 5000 5001",
        "WORKDIR /app",
        "ENTRYPOINT [\"dotnet\", \"SpikeWeekAws.dll\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./SpikeWeekAws/bin/Release/netcoreapp2.1",
      "destination": "/app/"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `ecr_base` }}/spikeweekaws",
        "tag": "{{user `tag` }}"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "aws_profile": "{{user `aws_profile` }}",
        "login_server": "https://{{user `ecr_base` }}/"
      }
    ]
  ]
}
